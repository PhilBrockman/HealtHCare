<%= form_for @patient, url: {action: :update_profile}, method: :put  do |f| %>
<% if @patient.errors.any? %>
<div id = "error_explanation">
  <h2><%= pluralize(@patient.errors.count, "error") %> prohibited your profile from being saved: </h2>
  <ul>
    <% @patient.errors.full_messages.each do |message| %>
    <li> <%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<fieldset>
  <legend>Contact</legend>
<div class="field">
  <%= f.label :name, "Full Legal Name" %><br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <p>Email: <%= @candidate.email %>.  <%= link_to "Change email or password", edit_candidate_registration_path %></p>
</div>
</fieldset>
<fieldset>
  <legend>College</legend>
<div class = "field">
  <%= f.label :college %><br />
  <%= f.text_field :college %>
</div>

<div class="field">
  <%= f.label :college_graduation_year %><br />
  <%= f.text_field :college_graduation_year %>
</div>

<div class = "field">
  <%= f.label :major %><br />
  <%= f.text_field :major %>
</div>
</fieldset>
<fieldset>
  <legend>Resume</legend>
  Your resume will automatically be added to any applications you submit.
  <% if @candidate.resume.path %>
  You can upload a new copy of your resume by selecting a file. <%= link_to "Resume on file", document_path(@candidate.resume) %>
  <% end %>
  <%= f.file_field :resume %>
</fieldset>
<fieldset>
  <legend>KIPP Alumni</legend>
  <div class="field">
    <p>Are you an alumni?</p>
    <%= f.select :alumni, [['Please Select', nil], ['Yes', true], ['No', false]] %>
</div>
<div class="field">
  <%= f.label :alumni_school, "Please indicate the KIPP school(s) that you attended" %><br />
  <%= f.text_field :alumni_school %>
</div>
</fieldset>

<%= f.submit "Update Profile" %>
<% end %>
